TARGETS_F051DISCO := STM32F051DISCO

HAL_FOLDER_F051DISCO := $(SRC_HAL_DIR)/f051

MCU_F051DISCO := -mcpu=cortex-m0 -mthumb
LDSCRIPT_F051DISCO := $(HAL_FOLDER_F051DISCO)/STM32F051DISCO_FLASH.ld

SRC_DIR_F051DISCO += \
	$(SRC_HAL_DIR)/stm32 \
	$(HAL_FOLDER_F051DISCO) \
	$(HAL_FOLDER_F051DISCO)/Drivers/STM32F0xx_HAL_Driver/Src

CFLAGS_F051DISCO := -g -Og \
	-I$(SRC_HAL_DIR)/stm32 \
	-I$(HAL_FOLDER_F051DISCO) \
	-I$(HAL_FOLDER_F051DISCO)/Drivers/STM32F0xx_HAL_Driver/Inc \
	-I$(HAL_FOLDER_F051DISCO)/Drivers/CMSIS/Include \
	-I$(HAL_FOLDER_F051DISCO)/Drivers/CMSIS/Device/ST/STM32F0xx/Include \


CFLAGS_F051DISCO += \
	-DHSE_VALUE=8000000 \
	-DSTM32F051x8 \
	-DHSE_STARTUP_TIMEOUT=100 \
	-DLSE_STARTUP_TIMEOUT=5000 \
	-DLSE_VALUE=32768 \
	-DDATA_CACHE_ENABLE=0 \
	-DINSTRUCTION_CACHE_ENABLE=0 \
	-DVDD_VALUE=3300 \
	-DLSI_VALUE=40000 \
	-DHSI_VALUE=8000000 \
	-DUSE_FULL_LL_DRIVER \
	-DPREFETCH_ENABLE=1 \
	-DENABLE_LED_BLINK \
	-DENABLE_COMPILE_CLI \
	-DDEBUG_PRINT \


SRC_F051DISCO_C   := $(foreach dir, $(SRC_DIR_F051DISCO), $(wildcard $(dir)/*.c))
SRC_F051DISCO_CPP := $(foreach dir, $(SRC_DIR_F051DISCO), $(wildcard $(dir)/*.cpp))
SRC_F051DISCO_S   := $(foreach dir, $(SRC_DIR_F051DISCO), $(wildcard $(dir)/*.s))
