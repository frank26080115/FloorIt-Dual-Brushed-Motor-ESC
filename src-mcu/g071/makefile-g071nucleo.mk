TARGETS_G071NUCLEO := STM32G071NUCLEO

HAL_FOLDER_G071NUCLEO := $(SRC_HAL_DIR)/g071

MCU_G071NUCLEO := -mcpu=cortex-m0 -mthumb
LDSCRIPT_G071NUCLEO := $(HAL_FOLDER_G071)/STM32G071NUCLEO_FLASH.ld

SRC_DIR_G071NUCLEO := \
	$(SRC_HAL_DIR)/stm32 \
	$(SRC_HAL_DIR)/mixed \
	$(HAL_FOLDER_G071NUCLEO) \
	$(HAL_FOLDER_G071NUCLEO)/Drivers/STM32G0xx_HAL_Driver/Src \


CFLAGS_G071NUCLEO := -g -Os \
	-I$(SRC_HAL_DIR)/stm32 \
	-I$(SRC_HAL_DIR)/mixed \
	-I$(HAL_FOLDER_G071NUCLEO) \
	-I$(HAL_FOLDER_G071NUCLEO)/Drivers/STM32G0xx_HAL_Driver/Inc \
	-I$(HAL_FOLDER_G071NUCLEO)/Drivers/CMSIS/Include \
	-I$(HAL_FOLDER_G071NUCLEO)/Drivers/CMSIS/Device/ST/STM32G0xx/Include \


CFLAGS_G071NUCLEO += \
	-DHSE_VALUE=8000000 \
	-DSTM32G071xx \
	-DHSE_STARTUP_TIMEOUT=100 \
	-DLSE_STARTUP_TIMEOUT=5000 \
	-DLSE_VALUE=32768 \
	-DDATA_CACHE_ENABLE=1 \
	-DINSTRUCTION_CACHE_ENABLE=0 \
	-DVDD_VALUE=3300 \
	-DLSI_VALUE=32000 \
	-DHSI_VALUE=16000000 \
	-DUSE_FULL_LL_DRIVER \
	-DPREFETCH_ENABLE=1 \
	-DENABLE_LED_BLINK \
	-DENABLE_COMPILE_CLI \
	-DDEBUG_PRINT \


SRC_G071NUCLEO_C   := $(foreach dir, $(SRC_DIR_G071NUCLEO), $(wildcard $(dir)/*.c))
SRC_G071NUCLEO_CPP := $(foreach dir, $(SRC_DIR_G071NUCLEO), $(wildcard $(dir)/*.cpp))
SRC_G071NUCLEO_S   := $(foreach dir, $(SRC_DIR_G071NUCLEO), $(wildcard $(dir)/*.s))
